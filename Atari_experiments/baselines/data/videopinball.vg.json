{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
  "width": 800,
  "height": 400,
  "padding": 5,

  "data": {"url": "data/videopinball.json"},
  "transform": [
    {
      "filter": {
        "field": "Agent",
        "oneOf": ["DQN", "C51", "RAINBOW", "IQN"]
      }
    }
  ],
  "layer": [
    {
      "mark": "area",
      "encoding": {
        "x": {
          "field": "Iteration",
          "type": "quantitative"
        },
        "y": {
          "aggregate": "ci0",
          "field": "Value",
          "type": "quantitative",
          "axis": {"title": "Return (95% CIs)"}
        },
        "y2": {
          "aggregate": "ci1",
          "field": "Value",
          "type": "quantitative"
        },
        "color": {
          "field": "Agent",
          "type": "nominal"
        },
        "opacity": {"value": 0.3}
      }
    },
    {
      "mark": "line",
      "encoding": {
        "x": {
          "field": "Iteration",
          "type": "quantitative"
        },
        "y": {
          "aggregate": "mean",
          "field": "Value",
          "type": "quantitative"
        },
        "color": {
          "field": "Agent",
          "type": "nominal"
        }
      }
    }
  ]
}

